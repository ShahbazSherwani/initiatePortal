{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "rootDir": "src/server",
    "outDir": "dist/server",
    "module": "nodenext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/server/**/*"]
}